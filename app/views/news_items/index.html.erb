<table border="1">
  <% collection.each do |resource| %>
    <tr>
      <td><%= link_to resource.id, news_item_path(resource) %></td>
      <td><%= resource.title %></td>
      <td><%= resource.text.truncate(100) %></td>
      <td><%= link_to 'link', resource.url %></td>
      <td><%= resource.plus_count %></td>
      <td><%= resource.minus_count %></td>
      <td><%= resource.rating %></td>
    </tr>
  <% end %>
</table>